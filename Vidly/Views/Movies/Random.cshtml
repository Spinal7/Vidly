
@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Movie.Name</h2>

@*Use for loop to traverse through the list of customers in the Model
    The list of customers will be listed in an ordered list*@
@if (Model.Customers.Count == 0)
{
    <p>No one has rented that movie yet</p>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>

        }
    </ul>
}
 